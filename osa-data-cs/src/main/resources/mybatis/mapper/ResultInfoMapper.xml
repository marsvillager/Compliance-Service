<mapper namespace="com.siemens.osa.data.cs.mapper.ResultInfoMapper">
    <resultMap id="resultList" type="ResultInfo">
        <id property="timestamp" column="timestamp"></id>
        <id property="id" column="id"></id>
        <result property="os" column="os"></result>
        <result property="rule_id" column="rule_id"></result>
        <result property="server_ip" column="server_ip"></result>
        <result property="host_ip" column="host_ip"></result>
        <result property="status" column="status"></result>
        <collection property="expected" ofType="String">
            <id property="expected" column="expected"></id>
        </collection>
        <collection property="actual" ofType="String">
            <id property="actual" column="actual"></id>
        </collection>
    </resultMap>

    <!--    List<ResultInfo> getAllResult();-->
    <select id="getAllResult" resultMap="resultList">
        select * from result
    </select>

    <!--    Map<String, ResultInfo> getResultById(@Param("id") Integer id);-->
    <select id="getResultById" resultMap="resultList">
        select * from result where id = #{id}
    </select>

